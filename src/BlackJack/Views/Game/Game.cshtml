@model BlackJack.Models.Player
@section css {
        <link rel="stylesheet" href="~/css/GameEstilos.css"/>
}
  
<div class="container jogolayout">
    <div class="row">
        <div class="col-md-4 saudacao">
            <h1>Olá @Model.Nome!!</h1>
            <div class="playingCards baralho">
                <ul class="deck">
                    <li><div class="card back"></div></li>
                    <li><div class="card back"></div></li>
                    <li><div class="card back"></div></li>
                </ul>
            </div>
        </div>
        <div class="col-md-4">
            <div class="playingCards fourColours">              
                 <ul class="hand">
                    <li><div class="card back"></div></li>
                    <li>
                        <div class="card rank-a spades">
                            <span class="rank">A</span>
                            <span class="suit">&spades;</span>
                        </div>
                    </li>
                </ul>
            </div>
            <p><strong>Pontos:</strong> 1 ou 11</p>
        </div>
        <div class="col-md-4"><h1>Ronda 1</h1></div>
    </div>   
    <div class="row">
        <div class="col-md-4">Aposta: 10</div>
        <div class="col-md-4">
            <div class="playingCards fourColours">                
                <ul class="table">
                    <li>
                        <div class="card rank-10 spades">
                            <span class="rank">10</span>
                            <span class="suit">&spades;</span>
                        </div>
                    </li>
                    <li>
                        <div class="card rank-j hearts">
                            <span class="rank">J</span>
                            <span class="suit">&hearts;</span>
                        </div>
                    </li>
                </ul>                                  
            </div>
            <p><strong>Pontos:</strong>21</p>
        </div>
        <div class="col-md-4"><strong>Créditos:</strong>@Model.Creditos</div>
    </div>
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <button class="btn btn-primary roun d-btn">HIT</button> 
            <button class="btn btn-warning round-btn">STAND</button> 
            <button class="btn btn-info round-btn">DOUBLE</button> 
            <button class="btn btn-danger round-btn">SURRENDER</button> 
        </div>
        <div class="col-md-4">
            <button class="btn btn-danger">Terminar Jogo</button>
        </div>
    </div>

</div>




