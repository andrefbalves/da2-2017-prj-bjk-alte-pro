@model BlackJack.Models.Player
@section css {
    <link rel="stylesheet" href="~/css/GameEstilos.css" />
}
@{
    ViewBag.Jogo = true;
}

@if (Model.Ronda == true)
{
    <div class="container">
        <div class="row dealerrow">
            <div class="col-md-3">
                <div class="playingCards baralho">
                    <ul class="deck">
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                    </ul>
                </div>
            </div>
            <div class="col-md-6 container">
                <div class="playingCards rotateHand faceImages">
                    <ul class="hand">
                        <li><div class="card back"></div></li>
                        <li>
                            <div class="card rank-a spades">
                                <span class="rank">A</span>
                                <span class="suit">&spades;</span>
                            </div>
                        </li>
                    </ul>
                </div>
                <p><strong>Pontos:</strong> 1 ou 11</p>
            </div>
            <div class="c   ol-md-3"><h1>Ronda 1</h1></div>
        </div>


        <div class="row">
            <div class="col-md-3"><button class="btn btn-primary round-btn center-block">HIT <span class="glyphicon glyphicon-plus"></span></button></div>
            <div class="col-md-3">
                <button class="btn btn-warning round-btn center-block">STAND <span class="glyphicon glyphicon-pause"></span></button>
            </div>
            <div class="col-md-3">
                <button class="btn btn-info round-btn center-block">DOUBLE <span class="glyphicon glyphicon-remove">2</span></button>
            </div>
            <div class="col-md-3"></div>
            <button class="btn btn-danger round-btn center-block">SURRENDER</button>
        </div>


        <div class="row playerrow">
            <div class="col-md-4">
                <div>@Model.Nome</div>
            </div>
            <div class="col-md-4">
                <div class="playingCards rotateHand faceImages">
                    <ul class="table">
                        <li>
                            <div class="card rank-10 spades">
                                <span class="rank">10</span>
                                <span class="suit">&spades;</span>
                            </div>
                        </li>
                        <li>
                            <div class="card rank-j hearts">
                                <span class="rank">J</span>
                                <span class="suit">&hearts;</span>
                            </div>
                        </li>
                    </ul>
                </div>
                <p><strong>Pontos:</strong>21</p>
            </div>
        </div>
        <div class="col-md-4"></div>
    </div>
}
else
{ 
    <div class="container">
        <div class="row dealerrow">
            <div class="col-md-3">
                <div class="playingCards baralho">
                    <ul class="deck">
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                    </ul>
                </div>
            </div>
            <div class="col-md-6 container">                           
            </div>
            <div class="col-md-3"></div>
        </div>             

        <div class="row playerrow">
            <div class="col-md-4"></div>
            <div class="col-md-4"> 
                <form asp-action="Game" method="post">
                    <div asp-validation-summary="All"></div>
                    <div class="form-group text-center">
                        <label asp-for="Aposta">Está na altura de largar dinheiro:</label>
                        <input asp-for="Aposta" class="form-control center-block" />
                    </div>
                    <button type="submit" class="btn btn-warning center-block">Apostar</button>
                </form>            
            </div>
        </div>
        <div class="col-md-4"></div>
    </div>
}



