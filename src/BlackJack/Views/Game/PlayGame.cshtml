@model BlackJack.Models.PlayApiResponse
@using BlackJack.Models;

@{
    ViewBag.Jogo = true;
    ViewBag.BodyCLass = "Jogo";
}

@if (Model.PlayingRound == true)
{
    <div class="container">
        <div class="row dealerrow">
            <div class="col-md-4">
                <div class="playingCards baralho">
                    <ul class="deck">
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                    </ul>
                </div>
            </div>
            <div class="col-md-6 container dealerhand">
                <div class="playingCards rotateHand faceImages">
                    <ul class="table">
                        <li><div class="card back"></div></li>
                        <li>
                            @foreach (BlackJack.Models.Card card in Model.Dealerhand)
                            {
                                <div class="card rank-@card.GetFaceAliasMin() @card.GetSuitAliasMin()">
                                    <span class="rank">@Model.ConverterCard(card.GetFaceAlias())</span>
                                    <span class="suit">&@card.GetSuitAliasMin();</span>
                                </div>
                            }
                        </li>
                    </ul>
                </div>

            </div>
            <div class="col-md-2">
                <div class="container well wellsize">
                    <p><strong><span class="glyphicon glyphicon-exclamation-sign"></span>   Ronda @Model.RoundCount</strong></p>
                    <strong>Dealer:</strong> @Model.ValueHands(Model.Dealerhand)
                </div>
            </div>
        </div>

        <div class="row playerrow">
            <div class="col-md-4">
            </div>
            <div class="col-md-6">
                <div class="playingCards rotateHand faceImages">
                    <ul class="table">
                        @foreach (BlackJack.Models.Card card in Model.PlayerHand)
                        {
                            <li>
                                <div class="card rank-@card.GetFaceAliasMin() @card.GetSuitAliasMin()">
                                    <span class="rank">@Model.ConverterCard(card.GetFaceAlias())</span>
                                    <span class="suit">&@card.GetSuitAliasMin();</span>
                                </div>
                            </li>
                        }
                    </ul>
                </div>

            </div>
            <div class="col-md-2">
                <div class="container well wellsize">
                    <p><strong><span class="glyphicon glyphicon-user"></span>   @Model.PlayerName</strong></p>
                    <p><strong>Créditos:</strong> @Model.PlayerCredits</p>
                    <p><strong>Aposta:</strong> @Model.Bet</p>
                    <p><strong>Pontos:</strong> @Model.ValueHands(Model.PlayerHand) </p>
                </div>
            </div>
        </div>


        <div class="row btnrow">
            <div class="col-md-3"></div>

            <div class="col-md-6">
                <div class="col-md-3">
                    <form asp-action="PlayGame" method="post">
                        <div>
                            <input name="PlayerAction" value="@PlayerAction.Hit" hidden />
                            <input name="Id" value="@Model.GameId" hidden />
                            <input name="InitialBet" value="@Model.Bet" hidden />
                        </div>
                        <button type="submit" class="btn btn-success btn-large roundbtn"><span class="glyphicon glyphicon-plus"></span> Hit</button>
                    </form>
                </div>
                <div class="col-md-3">
                    <form asp-action="PlayGame" method="post">
                        <div>
                            <input name="PlayerAction" value="@PlayerAction.Stand" hidden />
                            <input name="Id" value="@Model.GameId" hidden />
                            <input name="InitialBet" value="@Model.Bet" hidden />
                        </div>
                        <button class="btn btn-primary btn-large roundbtn"><span class="glyphicon glyphicon-pause"></span> Stand</button>
                    </form>
                </div>
                <div class="col-md-3">
                    <form asp-action="PlayGame" method="post">
                        <div>
                            <input name="PlayerAction" value="@PlayerAction.Double" hidden />
                            <input name="Id" value="@Model.GameId" hidden />
                            <input name="InitialBet" value="@Model.Bet" hidden />
                        </div>

                        <button class="btn btn-warning btn-large roundbtn"><span class="glyphicon glyphicon-refresh"></span> Double</button>
                    </form>
                </div>
                <div class="col-md-3">
                    <form asp-action="PlayGame" method="post">
                        <div>
                            <input name="PlayerAction" value="@PlayerAction.Surrender" hidden />
                            <input name="Id" value="@Model.GameId" hidden />
                            <input name="InitialBet" value="@Model.Bet" hidden />
                        </div>
                        <button class="btn btn-danger btn-large roundbtn"><span class="glyphicon glyphicon-remove"></span> Surrender</button>
                    </form>
                </div>

            </div>
            <div class="col-md-3">  </div>
        </div>
    </div>
}
else
{
    <div class="container">
        <div class="row dealerrow">
            <div class="col-md-3">
                <div class="playingCards baralho">
                    <ul class="deck">
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                        <li><div class="card back"></div></li>
                    </ul>
                </div>
            </div>
            <div class="col-md-6 container">
            </div>
            <div class="col-md-3"></div>
        </div>

        <div class="row playerrow">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <div class="container well wellsize">
                    @if (Model.RoundFinalResult == (int)RoundFinalResult.Win) 
                    {
                        <div class="alertwin">
                            <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                            <strong>Ganhaste!</strong>
                        </div>
                    }
                    else if (Model.RoundFinalResult == (int)RoundFinalResult.Lose)
                    {
                        <div class="alertlose">
                            <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                            <strong>Perdeste!</strong>
                        </div>
                    }
                    else if (Model.RoundFinalResult == (int)RoundFinalResult.Empate)
                    {
                        <div class="alertempate">
                            <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                            <strong>Empate!</strong>
                        </div>
                    }
                    else if (Model.RoundFinalResult == (int)RoundFinalResult.Surrender)
                    {
                        <div class="alertsurrender">
                            <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                            <strong>Desististe!</strong>
                        </div>
                    }
                    <h3 class="text-center">Introduz a tua aposta!</h3>
                    <form asp-action="PlayGame" method="post">
                        <div asp-validation-summary="All"></div> 
                        <div class="form-group">
                            <input type="text" name="InitialBet" class="form-control center-block"/>
                        </div>
                        <div>
                            <input name="PlayerAction" value="@PlayerAction.NewRound" hidden />
                            <input name="Id" value="@Model.GameId" hidden />
                        </div>
                        <button type="submit" class="btn btn-warning center-block">Apostar</button>
                    </form>
                </div>
            </div>
            <div class="col-md-4">
                <div class="row">
                    <div class="col-md-6"></div>
                    <div class="col-md-6">
                        <div class="container well wellsize">
                            <p><strong><span class="glyphicon glyphicon-user"></span>   @Model.PlayerName</strong></p>
                            <p><strong>Créditos:</strong> @Model.PlayerCredits</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}



