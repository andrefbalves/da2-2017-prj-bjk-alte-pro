@model BlackJack.Models.Player
@{
    ViewData["Title"] = "Criar Novo Jogador";
}

    <form asp-action="Index" method="post">
        <div asp-validation-summary="All"></div>
        <div class="form-group form">
            <label asp-for="Nome">Nome:</label>
            <input asp-for="Nome" class="form-control" />
        </div>
        <div class="form-group form">
            <label asp-for="Idade">Idade:</label>
            <input asp-for="Idade" value="18" class="form-control"/>
        </div>
        <button type="submit" class="btn btn-success">Criar Jogador</button>
    </form>
