@model BlackJack.Models.NewGameApiRequest
@{
    ViewData["Title"] = "Criar Novo Jogador";
}

    <form asp-action="Index" method="post">
        <div asp-validation-summary="All"></div>
        <div class="form-group form">
            <label asp-for="PlayerName">Nome:</label>
            <input asp-for="PlayerName" class="form-control" />
        </div>        
        <div class="form-group">            
            <input type="checkbox" asp-for="MaiorIdade"/>
            <label asp-for="MaiorIdade">Sou Maior de Idade</label>
        </div>
        <button type="submit" class="btn btn-success">Criar Jogador</button>
    </form>
