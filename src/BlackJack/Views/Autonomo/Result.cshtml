@model List<BlackJack.Models.RoundSummary>

@{
    ViewData["Title"] = "Resultado";
    ViewBag.BodyCLass = "Jogo";
}


<div class="container">
    <div class="row">
        <div class="col-md-3">
            <a id="btnglobal" class="btn btn-success btn-large  btnresult"><span class="glyphicon glyphicon-zoom-out"></span><strong> Global</strong> </a>
            <a id="btndetail" class="btn btn-primary btn-large  btnresult"><span class="glyphicon glyphicon-zoom-in"></span><strong> Detalhes</strong> </a>
        </div>
        <div id="details" class="col-md-6">
            <table class="table table-hover text-center tableop">
                <thead>
                    <tr>
                        <th> Rondas </th>
                        <th> Créditos Iniciais</th>
                        <th> Aposta</th>
                        <th> Resultado </th>
                        <th> Double </th>
                        <th> BlackJack </th>
                        <th> Dealer BlackJack </th>
                        <th> Créditos Finais </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (BlackJack.Models.RoundSummary round in Model)
                    {
                        <tr>
                            <td>@round.Rounds</td>
                            <td>@round.InitialCredits</td>
                            <td>@round.Bet</td>
                            <td>
                                @if (round.RoundResult == 1)
                                {
                                    @:<div class="text-danger">Perdeu</div>
             }
                                else if (round.RoundResult == 2)
                                {
                                    @:<div class="text-success">Ganhou</div>
             }
                                else if (round.RoundResult == 3)
                                {
                                    @:<div class="text-info">Empatou</div>
             }
                                else if (round.RoundResult == 4)
                                {
                                    @:Desistiu
             }
                                else if (round.RoundResult == 5)
                                {
                                    @:<div class="text-success">BlackJack</div>
             }
                            </td>
                            <td>
                                @if (round.Double)
                                {
                                    @:X
             }
                                else
                                {
                                    @:-
            }
                            </td>
                            <td>
                                @if (round.Blackjack)
                                {
                                    @:X
             }
                                else
                                {
                                    @:-
            }
                            </td>
                            <td>
                                @if (round.DealerBlackjack)
                                {
                                    @:X
             }
                                else
                                {
                                    @:-
            }
                            </td>
                            <td>@round.FinalCredits</td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
        <div id="global" class="col-md-6">
            <table class="table table-hover text-center tableop">
                <thead>
                    <tr>
                        <th> Nº Rondas </th>
                        <th> Total de Créditos</th>
                        <th> Maior Aposta</th>
                        <th> Menor Aposta </th>
                        <th> Aposta Média </th>
                        <th> BlackJack </th>
                        <th> Dealer BlackJack  </th>
                    </tr>
                </thead>
                <tbody>
                    <tr></tr>
                </tbody>
            </table>

        </div>
        <div class="col-md-3"></div>
    </div>
</div>
