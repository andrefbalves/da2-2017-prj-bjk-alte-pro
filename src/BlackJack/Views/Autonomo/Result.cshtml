@model List<BlackJack.Models.RoundSummary>

@{
    ViewData["Title"] = "Resultado";
    ViewBag.BodyCLass = "Jogo";
}

<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <table class="table table-hover text-center tableop">
                <thead>
                    <tr>
                        <th> Rondas </th>
                        <th> Créditos Iniciais</th>
                        <th> Aposta</th>
                        <th> Resultado </th>
                        <th> Double </th>
                        <th> BlackJack </th>
                        <th> BlackJack Dealer </th>
                        <th> Créditos Finais </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        @foreach (BlackJack.Models.RoundSummary round in Model)
                        {
                            <td>@round.Rounds</td>
                            <td>@round.InitialCredits</td>
                            <td>@round.Bet</td>
                            <td>@round.RoundResult</td>
                            <td>
                                @if (round.Double)
                                {
                                    @:Sim
             }
                                else
                                {
                                    @:Não
            }
                            </td>
                            <td>
                                @if (round.Blackjack)
                                {
                                    @:Sim
             }
                                else
                                {
                                    @:Não
            }
                            </td>
                            <td>
                                @if (round.DealerBlackjack)
                                {
                                    @:Sim
             }
                                else
                                {
                                    @:Não
            }
                            </td>
                            <td>@round.FinalCredits</td>
                        }
                    </tr>
                </tbody>
            </table>

        </div>
        <div class="col-md-3"></div>
    </div>
</div>
