@model List<BlackJack.Models.Game>

@{
    ViewData["Title"] = "HighScores";
}

@if (Model.Count == 0)
{
    <h3 class="text-center">Sem jogadores registados...</h3>
}
else
{ 
<table class="table table-hover text-center">
    <thead>
        <tr>
            <th> Nome</th>
            <th> Rondas </th>
            <th class="text-success"> Vitórias </th>
            <th class="text-warning">Empates </th>
            <th class="text-danger">Derrotas</th>
            <th> BlackJack</th>
            <th> Créditos</th>
        </tr>
    </thead>
    <tbody>
       @for (int i = 0; i < Model.Count && i < 10; i = i + 1)
       {
        <tr>
            <td> @Model.ElementAt(i).PlayerName</td>
            <td> @Model.ElementAt(i).Rounds </td>
            <td> @Model.ElementAt(i).Wins</td>
            <td> @Model.ElementAt(i).Ties</td>
            <td> @Model.ElementAt(i).Loses </td>
            <td> @Model.ElementAt(i).BlackJack </td>
            <td> @Model.ElementAt(i).Credits </td>
        </tr>
       }                                                
    </tbody>
</table>
}

